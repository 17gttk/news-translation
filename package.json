{
    "name": "news-translation",
    "version": "1.0.0",
    "license": "CC BY-NC-SA 4.0",
    "homepage": "https://github.com/freeCodeCamp/news-translation#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/freeCodeCamp/news-translation.git"
    },
    "bugs": {
        "url": "https://github.com/freeCodeCamp/news-translation/issues"
    },
    "devDependencies": {
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "prettier": "^2.1.2",
        "remark-cli": "^8.0.1",
        "remark-preset-lint-recommended": "^4.0.1",
        "zhlint": "^0.2.2"
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-recommended",
            [
                "remark-lint-no-literal-urls",
                false
            ],
            [
                "remark-lint-no-shortcut-reference-link",
                false
            ],
            [
                "remark-lint-list-item-indent",
                false
            ]
        ]
    },
    "lint-staged": {
        "*.{md,json,yml}": "prettier --write",
        "chinese/**/*.md": "zhlint --fix"
    },
    "scripts": {
        "lint": "remark !(node_modules)/**/*.md",
        "test": "lint-staged"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test"
        }
    }
}
